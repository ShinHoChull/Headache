<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFF2F7"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/step9View1"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="9.4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/step9Title"
                            android:layout_width="match_parent"
                            android:layout_height="105dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:scaleType="fitStart"
                                android:src="@drawable/step9_title" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3" />
                        </LinearLayout>

                        <GridView
                            android:id="@+id/step9_gridV"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="8.5"
                            android:nestedScrollingEnabled="true"
                            android:numColumns="4" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#e4e6ea" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="#EFF2F7"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.8"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/nanum_bold"
                                android:gravity="center_vertical"
                                android:text="약물 복용 후 효과 본 시간"
                                android:textColor="#222222"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:id="@+id/radio1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/radio1_img"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/step9_radio_not_check"
                                    android:layout_weight="0.6"
                                    android:padding="3dp"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:fontFamily="@font/nanum_bold"
                                    android:gravity="center_vertical"
                                    android:text=" 효과 없음"
                                    android:textColor="#666666"
                                    android:textSize="15dp"
                                    android:layout_marginLeft="5dp"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/radio2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:id="@+id/radio2_img"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/step9_radio_not_check"
                                        android:layout_weight="1.4"
                                        android:padding="3dp"
                                        />
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="5"
                                        android:fontFamily="@font/nanum_bold"
                                        android:gravity="center_vertical"
                                        android:text=" 30분내 이내"
                                        android:textColor="#666666"
                                        android:textSize="15dp"
                                        android:layout_marginLeft="5dp"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/radio3"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/radio3_img"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/step9_radio_not_check"
                                        android:layout_weight="1.4"
                                        android:padding="3dp"
                                        />
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="5"
                                        android:fontFamily="@font/nanum_bold"
                                        android:gravity="center_vertical"
                                        android:text=" 1시간 이내"
                                        android:textColor="#666666"
                                        android:textSize="15dp"
                                        android:layout_marginLeft="5dp"
                                        />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/radio4"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:id="@+id/radio4_img"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/step9_radio_not_check"
                                        android:layout_weight="1.4"
                                        android:padding="3dp"
                                        />
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="5"
                                        android:fontFamily="@font/nanum_bold"
                                        android:gravity="center_vertical"
                                        android:text=" 2시간 이내"
                                        android:textColor="#666666"
                                        android:textSize="15dp"
                                        android:layout_marginLeft="5dp"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/radio5"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/radio5_img"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/step9_radio_not_check"
                                        android:layout_weight="1.4"
                                        android:padding="3dp"
                                        />
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="5"
                                        android:fontFamily="@font/nanum_bold"
                                        android:gravity="center_vertical"
                                        android:text=" 2시간 이상"
                                        android:textColor="#666666"
                                        android:textSize="15dp"
                                        android:layout_marginLeft="5dp"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/backBt"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="@drawable/back_radius"
                                android:fontFamily="@font/nanum_bold"
                                android:gravity="center"
                                android:text="이전"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5" />

                            <TextView
                                android:id="@+id/nextBt"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="@drawable/next_radius"
                                android:fontFamily="@font/nanum_bold"
                                android:gravity="center"
                                android:text="다음"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>