<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="115dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    >
                    <ImageView
                        android:id="@+id/step3_type"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/step4_type1"
                        android:layout_gravity="center"
                        />

                    <LinearLayout
                        android:id="@+id/step3_type_check"
                        android:layout_marginTop="1dp"
                        android:layout_width="69dp"
                        android:layout_height="67dp"
                        android:background="@drawable/step4_type_check"
                        android:layout_gravity="center"
                        android:orientation="vertical"/>

                </FrameLayout>

                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/step3_type_txt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="아플 것 같은\n느낌"
                   android:fontFamily="@font/nanum"
                    android:textColor="#A4A5A7"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textSize="13dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />
            </LinearLayout>




        </FrameLayout>


    </FrameLayout>

</LinearLayout>