<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="115dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    >

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/drugCount"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right|bottom"
                        android:background="#000000"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:background="@drawable/step_grid_radius"
                        />

                    <ImageView
                        android:id="@+id/step3_type"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        />

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/step3_type_check"
                        android:layout_marginTop="1dp"
                        android:layout_width="69dp"
                        android:layout_height="67dp"
                        android:background="@drawable/step4_type_check"
                        android:layout_gravity="center"
                        android:orientation="vertical"/>

                </FrameLayout>

                <TextView
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:id="@+id/step3_type_txt"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="욱신거림"
                    android:fontFamily="@font/nanum"
                    android:textColor="#A4A5A7"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|top"
                    android:textSize="14.5dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />

            </LinearLayout>


        </FrameLayout>


</LinearLayout>