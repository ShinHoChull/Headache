<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFF2F7"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:scaleType="fitStart"
                                android:src="@drawable/step6_title" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:background="@drawable/step1_day_board"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/yesBt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="예"
                                android:textColor="#C2C2C2"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="2px"
                                android:layout_height="match_parent"
                                android:background="#DEDEDE"/>

                            <TextView
                                android:id="@+id/noBt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="아니오"
                                android:textColor="#C2C2C2"
                                android:textSize="18dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:src="@drawable/step6_img" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/step6Line"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#e4e6ea" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/step6ParentV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

<!--                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:src="@drawable/step6_bottom_txt" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5" />

                        </LinearLayout>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="6"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/checkbox1"
                                        android:layout_width="match_parent"
                                        android:layout_height="65dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/check1"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.5"
                                            android:padding="10dp"
                                            android:src="@drawable/login_check_off" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="8.5">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/nanum_bold"
                                                android:gravity="center_vertical"
                                                android:text="이러한 증상은 5분에서 60분간 지속된다"
                                                android:textColor="#666666"
                                                android:textSize="16dp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/checkbox2"
                                        android:layout_width="match_parent"
                                        android:layout_height="65dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/check2"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.5"
                                            android:padding="10dp"
                                            android:src="@drawable/login_check_off" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="8.5">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/nanum_bold"
                                                android:gravity="center_vertical"
                                                android:text="이러한 증상은 5분이상 동안 서서히 나타나기 시작한다."
                                                android:textColor="#666666"
                                                android:textSize="16dp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/checkbox3"
                                        android:layout_width="match_parent"
                                        android:layout_height="65dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/check3"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.5"
                                            android:padding="10dp"
                                            android:src="@drawable/login_check_off" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="8.5">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/nanum_bold"
                                                android:gravity="center_vertical"
                                                android:text="시야 중 보이지 않는 부분이 있다."
                                                android:textColor="#666666"
                                                android:textSize="16dp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/checkbox4"
                                        android:layout_width="match_parent"
                                        android:layout_height="65dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/check4"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.5"
                                            android:padding="10dp"
                                            android:src="@drawable/login_check_off" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="8.5">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/nanum_bold"
                                                android:gravity="center_vertical"
                                                android:text="지그재그선(성곽모양)이 보인다."
                                                android:textColor="#666666"
                                                android:textSize="16dp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/checkbox5"
                                        android:layout_width="match_parent"
                                        android:layout_height="65dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/check5"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.5"
                                            android:padding="10dp"
                                            android:src="@drawable/login_check_off" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="8.5">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/nanum_bold"
                                                android:gravity="center_vertical"
                                                android:text="이러한 증상이 오른쪽 또는 왼쪽 한쪽에서만 나타난다."
                                                android:textColor="#666666"
                                                android:textSize="16dp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/checkbox6"
                                        android:layout_width="match_parent"
                                        android:layout_height="65dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/check6"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.5"
                                            android:padding="10dp"
                                            android:src="@drawable/login_check_off" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="8.5">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/nanum_bold"
                                                android:gravity="center_vertical"
                                                android:text="단어가 잘 떠오르지 않거나 말이 어둔해진다."
                                                android:textColor="#666666"
                                                android:textSize="16dp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/checkbox7"
                                        android:layout_width="match_parent"
                                        android:layout_height="65dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/check7"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.5"
                                            android:padding="10dp"
                                            android:src="@drawable/login_check_off" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="8.5">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/nanum_bold"
                                                android:gravity="center_vertical"
                                                android:text="한쪽 손발이 저리거나 감각이 없어진다."
                                                android:textColor="#666666"
                                                android:textSize="16dp" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/backBt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/back_radius"
                    android:fontFamily="@font/nanum_bold"
                    android:gravity="center"
                    android:text="이전"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <TextView
                    android:id="@+id/nextBt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/next_radius"
                    android:fontFamily="@font/nanum_bold"
                    android:gravity="center"
                    android:text="다음"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>