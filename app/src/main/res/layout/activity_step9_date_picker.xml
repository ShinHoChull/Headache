<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="subTime"
            type="com.m2comm.headache.views.Step9DatePicker" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.SubTimePicker">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B3000000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6.4"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8.8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.1"
                        android:background="@drawable/sub_time_activity">

                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/nanum"
                            android:gravity="center"
                            android:text="약을 복용한 날을 선택해 주세요"
                            android:textColor="@android:color/white"
                            android:textSize="14dp" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6.6"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp">

                            <LinearLayout
                                android:id="@+id/calendarView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.1"
                                    android:orientation="horizontal"
                                    >
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.8"/>

                                    <ImageView
                                        android:id="@+id/backBt"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:src="@drawable/btn_d_back2"
                                        />

                                    <TextView
                                        android:id="@+id/thisMonth"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:text="3 월"
                                        android:gravity="center"
                                        android:layout_weight="4"
                                        android:textSize="14dp"
                                        android:textColor="@android:color/black"
                                        android:fontFamily="@font/nanum_bold"/>

                                    <ImageView
                                        android:id="@+id/nextBt"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:src="@drawable/btn_d_next2"
                                        />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.8"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.8"
                                    >

                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textSize="13dp"
                                        android:text="일"
                                        android:textColor="#888888"
                                        android:gravity="center"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textSize="13dp"
                                        android:text="월"
                                        android:textColor="#888888"
                                        android:gravity="center"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textSize="13dp"
                                        android:text="화"
                                        android:textColor="#888888"
                                        android:gravity="center"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textSize="13dp"
                                        android:text="수"
                                        android:textColor="#888888"
                                        android:gravity="center"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textSize="13dp"
                                        android:text="목"
                                        android:textColor="#888888"
                                        android:gravity="center"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textSize="13dp"
                                        android:text="금"
                                        android:textColor="#888888"
                                        android:gravity="center"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textSize="13dp"
                                        android:text="토"
                                        android:textColor="#888888"
                                        android:gravity="center"
                                        />

                                </LinearLayout>

                                <androidx.viewpager.widget.ViewPager
                                    android:id="@+id/pager"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="7.2"
                                    />

                            </LinearLayout>

                            <TimePicker
                                android:id="@+id/timepicker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/MyTimePickerDialogStyle"
                                android:timePickerMode="spinner"
                                android:layout_gravity="center"
                                />


                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#20222222" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.1"
                        android:background="@drawable/sub_time_activity_bottom">

                        <TextView
                            android:id="@+id/cancelBt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/nanum"
                            android:gravity="center"
                            android:text="취소"
                            android:textColor="#222222"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="2px"
                            android:layout_height="match_parent"
                            android:background="#20222222" />

                        <TextView
                            android:id="@+id/successBt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/nanum"
                            android:gravity="center"
                            android:text="확인"
                            android:textColor="#222222"
                            android:textSize="18dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>