                                    android:fontFamily="@font/nanum_bold"
                                    android:gravity="center"
                                    android:text="8 요인"
                                    android:textColor="#D9D9D7" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/step8_dot"
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/step_not_work_dot" />
                        <!--step8 End-->

                        <!--step9 Start-->
                        <LinearLayout
                            android:id="@+id/step9Bt"
                            android:layout_width="100dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/step9B_Back"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:background="@drawable/step_content_bt_not_work">

                                <TextView
                                    android:id="@+id/step9B_Back_Txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    android:fontFamily="@font/nanum_bold"
                                    android:gravity="center"
                                    android:text="9 약물"
                                    android:textColor="#D9D9D7" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/step9_dot"
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/step_not_work_dot" />
                        <!--step9 End-->

                        <!--step10 Start-->
                        <LinearLayout
