                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    android:fontFamily="@font/nanum_bold"
                                    android:gravity="center"
                                    android:text="3 위치"
                                    android:textColor="#D9D9D7" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/step3_dot"
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/step_not_work_dot" />
                        <!--step3 End-->

                        <!--step4 Start-->
                        <LinearLayout
                            android:id="@+id/step4Bt"
                            android:layout_width="100dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/step4B_Back"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:background="@drawable/step_content_bt_not_work">

                                <TextView
                                    android:id="@+id/step4B_Back_Txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    android:fontFamily="@font/nanum_bold"
                                    android:gravity="center"
                                    android:text="4 유형"
                                    android:textColor="#D9D9D7" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/step4_dot"
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/step_not_work_dot" />
                        <!--step4 End-->

                        <!--step5 Start-->
                        <LinearLayout
                            android:id="@+id/step5Bt"
