                            android:src="@drawable/step_not_work_dot" />
                        <!--step6 End-->

                        <!--step7 Start-->
                        <LinearLayout
                            android:id="@+id/step7Bt"
                            android:layout_width="100dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/step7B_Back"
