                            android:src="@drawable/step_not_work_dot" />
                        <!--step5 End-->

                        <!--step6 Start-->
                        <LinearLayout
                            android:id="@+id/step6Bt"
                            android:layout_width="100dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/step6B_Back"
                                android:layout_width="match_parent"
