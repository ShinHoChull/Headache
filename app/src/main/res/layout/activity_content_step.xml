                                android:background="@drawable/step_content_bt_not_work">

                                <TextView
                                    android:id="@+id/step10B_Back_Txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    android:fontFamily="@font/nanum_bold"
                                    android:gravity="center"
                                    android:text="10 장애"
                                    android:textColor="#D9D9D7" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/step10_dot"
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/step_not_work_dot" />
                        <!--step10 End-->

                        <!--step11 Start-->
                        <LinearLayout
                            android:id="@+id/step11Bt"
                            android:layout_width="100dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/step11B_Back"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:background="@drawable/step_content_bt_not_work">

                                <TextView
                                    android:id="@+id/step11B_Back_Txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    android:fontFamily="@font/nanum_bold"
                                    android:gravity="center"
                                    android:text="11 월경"
                                    android:textColor="#D9D9D7" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/step11_dot"
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/step_not_work_dot" />
                        <!--step11 End-->

                        <!--step12 Start-->
                        <LinearLayout
                            android:id="@+id/step12Bt"
                            android:layout_width="100dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/step12B_Back"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:background="@drawable/step_content_bt_not_work">

                                <TextView
                                    android:id="@+id/step12B_Back_Txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    android:fontFamily="@font/nanum_bold"
                                    android:gravity="center"
                                    android:text="12 기록"
                                    android:textColor="#D9D9D7" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/step12_dot"
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/step_not_work_dot"
                            android:visibility="gone" />
                        <!--step12 End-->


                    </LinearLayout>
                    <!--StepBoxEnd-->

                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#EBEBEB"
                android:elevation="3dp" />

            <LinearLayout
                android:id="@+id/contentV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:background="#EFF2F7"
                android:orientation="vertical"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>