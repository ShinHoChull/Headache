<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="step"
            type="com.m2comm.headache.views.ContentStepActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.ContentStepActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#222222"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backBt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:padding="16dp"
                        android:src="@drawable/step_back" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7" />


                    <TextView
                        android:id="@+id/closeBt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="저장"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:fontFamily="@font/nanum"
                        />
<!--                    <ImageView-->
<!--                        android:id="@+id/closeBt"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_weight="1.5"-->
<!--                        android:padding="20dp"-->
<!--                        android:src="@drawable/step_close" />-->

                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#EBEBEB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9">

                <HorizontalScrollView
                    android:id="@+id/scrollview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:id="@+id/stepBtParentV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!--step1 Start-->
                        <LinearLayout
                            android:id="@+id/step1Bt"
                            android:layout_width="100dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/step1B_Back"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:background="@drawable/step_content_bt_success">

                                <TextView
                                    android:id="@+id/step1B_Back_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    android:background="@drawable/step_content_bt_sub_success"
                                    android:fontFamily="@font/nanum_bold"
                                    android:gravity="center"
                                    android:text="1 기간"
                                    android:textColor="#9C9C9C" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/step1_dot"
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/step_not_work_dot" />
                        <!--step1 End-->

                        <!--step2 Statr-->
                        <LinearLayout
                            android:id="@+id/step2Bt"
                            android:layout_width="100dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/step2B_Back"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:background="@drawable/step_content_bt_success">

                                <TextView
                                    android:id="@+id/step2B_Back_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    android:fontFamily="@font/nanum_bold"
                                    android:background="@drawable/step_content_bt_sub_success"
                                    android:gravity="center"
                                    android:text="2 강도"
                                    android:textColor="#9C9C9C" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/step2_dot"
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/step_not_work_dot" />
                        <!--step2 End-->

                        <!--step3 Start-->
                        <LinearLayout
                            android:id="@+id/step3Bt"
                            android:layout_width="100dp"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/step3B_Back"
                                android:layout_width="match_parent"
